<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101010"
    android:backgroundTint="#101010"
    android:padding="1dp"
    tools:context=".fragments.ChatsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/forumMessageRecycleView"
        android:layout_width="410dp"
        android:layout_height="506dp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toTopOf="@+id/messageTextEdit2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/smallRoundedRectangle"
        app:layout_constraintVertical_bias="0.421" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#232121"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toTopOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forumMessageRecycleView"
        app:maxButtonHeight="56dp" />

    <EditText
        android:id="@+id/messageTextEdit2"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginBottom="4dp"
        android:height="50dp"
        android:background="@drawable/rounded_rectangle_edit_message"
        android:ems="10"
        android:hint="Message"
        android:inputType="text"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/toolbar"
        app:layout_constraintEnd_toStartOf="@+id/sendMessageBtn2"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="@+id/materialToolbar7"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar6" />

    <ImageView
        android:id="@+id/sendMessageBtn2"
        android:layout_width="39dp"
        android:layout_height="38dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/messageTextEdit2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/messageTextEdit2"
        app:layout_constraintVertical_bias="0.4"
        app:srcCompat="@drawable/send_message_btn" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/smallRoundedRectangle"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_rectangle"
        android:clipToPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/forumTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="TextView"
            android:textColor="#ffffff"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/correspondenceMemberCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="TextView"
            android:textColor="#ffff"
            app:layout_constraintEnd_toEndOf="@+id/forumTitle"
            app:layout_constraintStart_toStartOf="@+id/forumTitle"
            app:layout_constraintTop_toBottomOf="@+id/forumTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#1D1D1D"
        android:backgroundTint="#1D1D1D"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/correspondenceGoToChat"
        android:layout_width="57dp"
        android:layout_height="38.15dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="294dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintHorizontal_bias="0.268"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.384"
        app:srcCompat="@drawable/forum_icon" />

    <ImageView
        android:id="@+id/correspondenceGoToForums"
        android:layout_width="38dp"
        android:layout_height="34dp"
        android:layout_marginStart="78dp"
        android:layout_marginEnd="178dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintStart_toEndOf="@+id/correspondenceGoToChat"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:srcCompat="@drawable/chat_icon" />

    <ImageView
        android:id="@+id/correspondenceGoToOwnProfile"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginStart="78dp"
        android:layout_marginEnd="54dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintStart_toEndOf="@+id/correspondenceGoToForums"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:srcCompat="@drawable/profile_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>